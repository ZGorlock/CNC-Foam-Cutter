<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gui.Interfaces.MainMenu.RotationController"
            prefHeight="400.0" prefWidth="600.0" stylesheets="/gui/style.css">
    <center>
        <HBox styleClass="hbox" spacing="20" prefWidth="Infinity">
            <BorderPane styleClass="=borderPane">
                <center>
                    <Pane>
                        <ImageView>
                            <Image url="@../../images/logo.PNG"/>
                        </ImageView>
                        <Label fx:id="imageLabel"/>
                    </Pane>
                </center>
                <bottom>
                    <ScrollBar fx:id="scrollBar" HBox.hgrow="ALWAYS"/>
                </bottom>
            </BorderPane>
        </HBox>
    </center>
</BorderPane>