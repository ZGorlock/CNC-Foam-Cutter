<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<Tab id="tabRotation" text="Rotation" closable="false" xmlns="http://javafx.com/javafx/8.0.121"
     xmlns:fx="http://javafx.com/fxml/1"
     fx:controller="gui.interfaces.main.RotationController">
    <VBox fx:id="vBox" prefWidth="1200" spacing="40" styleClass="vbox">
        <TilePane alignment="CENTER">
            <Label fx:id="fileName" alignment="CENTER_RIGHT"/>
            <HBox spacing="10" HBox.hgrow="ALWAYS">
                <TextField fx:id="textFieldDegrees"/>
                <Button fx:id="queueButton" onAction="#queueRotation" styleClass="buttonGold"
                        text="Set Step Count" HBox.hgrow="ALWAYS"/>
            </HBox>
        </TilePane>

        <Text/>

        <TilePane alignment="CENTER">
            <Label alignment="CENTER_RIGHT"/>
            <HBox spacing="10" HBox.hgrow="ALWAYS">
                <Label alignment="CENTER_RIGHT"/>
                <Label alignment="CENTER_RIGHT"/>
                <Label alignment="CENTER_RIGHT"/>
                <Label alignment="CENTER_RIGHT"/>
                <Label alignment="CENTER_RIGHT"/>
                <Label alignment="CENTER_RIGHT"/>
                <Label text="Select Rotation Step:" styleClass="bold" alignment="CENTER_RIGHT"/>
                <ComboBox fx:id="stepSelection" />
            </HBox>
        </TilePane>
    </VBox>
</Tab>